<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1E1E1E"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â†"
            android:textSize="20sp"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ” Scan for ESP32"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="SCAN"
            android:textColor="#03DAC6"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Device List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" />

    <!-- Loading/Empty State -->
    <TextView
        android:id="@+id/txtEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No ESP32 devices found\n\nMake sure your ESP32 is:\nâ€¢ Powered on\nâ€¢ Bluetooth enabled\nâ€¢ Named 'ESP32' or similar\n\nClick SCAN to search"
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="gone" />

</LinearLayout>